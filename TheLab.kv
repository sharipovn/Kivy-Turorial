<BoxLayoutExample>:
    # orientation: 'vertical'
    orientation: 'horizontal'
    Button:
        text: "A"
        # size:"40dp","40dp" nothing  changes
        #size_hint: 1,.5
        # size:"100dp","60dp" #take effect #default 100x100
        # size_hint: None,None
